{% extends 'base.html.twig' %}

{% block title %}{% trans %}Post Details{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Post Details{% endtrans %}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th class="text-nowrap">Id</th>
            <td>{{ post.id }}</td>
        </tr>
        <tr>
            <th class="text-nowrap">{% trans %}Title{% endtrans %} EN</th>
            <td>{{ post.title_en }}</td>
        </tr>
        <tr>
            <th class="text-nowrap">{% trans %}Title{% endtrans %} HR</th>
            <td>{{ post.title_hr }}</td>
        </tr>
        <tr>
            <th class="text-nowrap">{% trans %}Slug{% endtrans %} EN</th>
            <td>{{ post.slug_en }}</td>
        </tr>
        <tr>
            <th class="text-nowrap">{% trans %}Slug{% endtrans %} HR</th>
            <td>{{ post.slug_hr }}</td>
        </tr>
        <tr>
            <th class="text-nowrap">{% trans %}Content{% endtrans %} EN</th>
            <td style="white-space: pre-wrap">{{ post.content_en }}</td>
        </tr>
        <tr>
            <th class="text-nowrap">{% trans %}Content{% endtrans %} HR</th>
            <td style="white-space: pre-wrap">{{ post.content_hr }}</td>
        </tr>
        <tr>
            <th class="text-nowrap">{% trans %}Created By{% endtrans %}</th>
            <td>{{ post.author }}</td>
        </tr>
        <tr>
            <th class="text-nowrap">{% trans %}Published At{% endtrans %}</th>
            <td>{{ post.published_at }}</td>
        </tr>
        <tr>
            <th class="text-nowrap">{% trans %}Image{% endtrans %}</th>
            <td>
                <img src="{{ post.image_url }}" alt="{{ post.title_en }}" style="max-height: 250px">
            </td>
        </tr>
        <tr>
            <th class="text-nowrap">{% trans %}Tags{% endtrans %}</th>
            <td>
                {% for tag in post.tags %}
                    <a href="{{ path('app_tag_show', {'id': tag.id}) }}">{{ tag.name }}</a>{% if not loop.last %}, {% endif %}
                {% else %}
                    <span>-</span>
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th class="text-nowrap">{% trans %}Created At{% endtrans %}</th>
            <td>{{ post.created_at }}</td>
        </tr>
        <tr>
            <th class="text-nowrap">{% trans %}Updated At{% endtrans %}</th>
            <td>{{ post.updated_at }}</td>
        </tr>
        </tbody>
    </table>

    <div class="d-flex gap-2">
        <a href="{{ path('app_post_index') }}" class="btn btn-secondary">
            {% trans %}Back to list{% endtrans %}
        </a>

        <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-warning">
            {% trans %}Edit{% endtrans %}
        </a>

        {{ include('admin/post/_delete_form.html.twig') }}
    </div>
{% endblock %}

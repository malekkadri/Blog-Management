{% extends 'base.html.twig' %}

{% block title %}{% trans %}Tag Details{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Tag Details{% endtrans %}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ tag.id }}</td>
        </tr>
        <tr>
            <th>{% trans %}Name{% endtrans %} EN</th>
            <td>{{ tag.name_en }}</td>
        </tr>
        <tr>
            <th>{% trans %}Name{% endtrans %} HR</th>
            <td>{{ tag.name_hr }}</td>
        </tr>
        <tr>
            <th>{% trans %}Created By{% endtrans %}</th>
            <td>{{ tag.user }}</td>
        </tr>
        <tr>
            <th>{% trans %}Created At{% endtrans %}</th>
            <td>{{ tag.created_at }}</td>
        </tr>
        <tr>
            <th>{% trans %}Updated At{% endtrans %}</th>
            <td>{{ tag.updated_at }}</td>
        </tr>
        </tbody>
    </table>

    <div class="d-flex gap-2">
        <a href="{{ path('app_tag_index') }}" class="btn btn-secondary">
            {% trans %}Back to list{% endtrans %}
        </a>

        <a href="{{ path('app_tag_edit', {'id': tag.id}) }}" class="btn btn-warning">
            {% trans %}Edit{% endtrans %}
        </a>

        {{ include('admin/tag/_delete_form.html.twig') }}
    </div>
{% endblock %}
